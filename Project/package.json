{
    "name": "nytuo-launcher",
    "productName": "Nytuo-Launcher",
    "build": {
        "asar": false,
        "appId": "com.Nytuo.NytuoLauncher",
        "mac": {
            "category": "Nytuo.NytuoLauncher.Tool.Games"
        },
        "nsis": {
            "oneClick": true,
            "runAfterFinish": false,
            "createDesktopShortcut": "always"
        },
        "snap": {
            "confinement": "classic"
        },
        "publish": [
            {
                "provider": "github",
                "repo": "Nytuo-Launcher",
                "owner": "Nytuo"
            }
        ],
        "win": {
            "publish": [
                "github"
            ],
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "Resources/favicon.ico"
        },
        "linux": {
            "publish": [
                "github"
            ],
            "target": [
                "snap",
                "zip"
            ],
            "icon": "Resources/logoexp.png",
            "category": "Utility"
        }
    },
    "version": "2.22.2",
    "description": "Permet de télécharger,mettre à jour et jouer à mes jeux de manière simple et sans prise de tête.",
    "main": "main.js",
    "repository": "https://github.com/Nytuo/Nytuo-Launcher.git",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "dist": "electron-builder",
        "gh-publish": "electron-builder --x64 -p always",
        "devBuild": "electron-builder --x64 -p never",
        "start": "electron ."
    },
    "author": "Nytuo",
    "license": "GPL-3.0-only",
    "devDependencies": {
        "electron": "^12.0.7",
        "electron-builder": "^22.11.1"
    },
    "dependencies": {
        "@popperjs/core": "^2.9.2",
        "app": "^0.1.0",
        "bootstrap": "^5.0.0",
        "extract-zip": "^2.0.1",
        "fs": "^0.0.1-security",
        "nodejs": "^0.0.0",
        "office-ui-fabric-core": "^11.0.0",
        "path": "^0.12.7",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "shell": "^0.8.4",
        "shelljs": "^0.8.4",
        "windows-shortcuts": "^0.1.6"
    }
}